<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- TODO: Update blank fragment layout -->
    <kstn.game.app.screen.GameAnimationView
        android:id="@+id/game_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"


        android:id="@+id/btnChoiThoi"
        android:background="@drawable/trangthai_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="#FFFF00"
        android:text="Chơi Thôi"
      />



    <Button
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnChoiThoi"
        android:id="@+id/btnTranhDau"
        android:background="@drawable/trangthai_button"
        android:textColor="#FFFF00"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Tranh Đấu"
         />

    <Button
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnTranhDau"
        android:id="@+id/btnBangXepHang"
        android:background="@drawable/trangthai_button"
        android:textColor="#FFFF00"
        android:text="Bảng Xếp Hạng"
        android:layout_width="200dp"
        android:layout_height="50dp"
        />
</RelativeLayout>

