<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:weightSum="10"
    android:layout_height="match_parent"
    tools:context="kstn.game.view.thang.fragment.ResultFragment">
    <pl.droidsonroids.gif.GifTextView
        android:layout_weight="4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/gameover"/>
    <LinearLayout
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textSize="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#FFFF00"
            android:text="Score:  "
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="aaaaaaa"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/txtSaveScore"
            android:textColor="#d00938"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />


    </LinearLayout>
    <EditText
        android:id="@+id/edtSaveName"
        android:layout_weight="1.5"
        android:hint="Nhập tên để lưu điểm"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_weight="2.5"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <Button
        android:id="@+id/btnSaveScore"
        android:layout_marginLeft="40dp"
        android:layout_weight="0.5"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#FFFF00"
        android:text="Lưu Điểm"
        android:background="@drawable/trangthai_button"
        android:layout_width="100dp"
        android:layout_height="50dp" />
        <Button
            android:id="@+id/btnDontSave"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#FFFF00"
            android:layout_marginLeft="20dp"
            android:text="Hủy"
            android:background="@drawable/trangthai_button"
            android:layout_width="100dp"
            android:layout_height="50dp" />

    </LinearLayout>
</LinearLayout>
