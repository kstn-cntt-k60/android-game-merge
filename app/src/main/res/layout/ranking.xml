<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="10"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="4"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:weightSum="5"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView

                android:src="@drawable/rr1"
                android:layout_weight="3.4"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtNameRank2"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#FFFF00"
                android:text="abcxyz"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtScoreR2"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#FFFF00"
                android:text="100000"
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="0dp" />


        </LinearLayout>
        <LinearLayout
            android:weightSum="5"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView

                android:src="@drawable/rr3"
                android:layout_weight="3.4"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtNameRank1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#FFFF00"
                android:text="abcxyz"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtScoreR1"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#FFFF00"
                android:text="100000"
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="0dp" />


        </LinearLayout>
        <LinearLayout
            android:weightSum="5"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView

                android:src="@drawable/rr2"
                android:layout_weight="3.4"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtNameRank3"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#FFFF00"
                android:text="abcxyz"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtScoreR3"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#FFFF00"
                android:text="100000"
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="0dp" />


        </LinearLayout>
    </LinearLayout>
        <ListView
            android:id="@+id/lvRanking"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </ListView>

</LinearLayout>